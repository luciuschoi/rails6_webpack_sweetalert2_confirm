<p id="notice"><%= notice %></p>

<h1><i class="fab fa-adobe"></i> Posts</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody data-controller='posts'>
    <% @posts.each do |post| %>
      <tr id="post-<%= post.id %>">
        <td><%= post.title %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, data: { action: "click->posts#confirm" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
